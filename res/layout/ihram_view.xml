<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:background="@drawable/hajj_omra_menu_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="80dp"
        >

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ehramLine1" />

        <ImageView
            android:id="@+id/MoatamerImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:src="@drawable/moatamer" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ehramLine2" />
		<TextView
		    android:id="@+id/line3"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:text="@string/ehramline3" />
		<ImageView android:id="@+id/cappa_ehram_img"
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent"
		    android:src="@drawable/cappa_ehram_img"/>
		<TextView android:id="@+id/line4"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:text="@string/ehramLine4"/>
    </LinearLayout>
    

</ScrollView>